FROM       scratch
LABEL      gguf.model.from="Hugging Face"
ADD        https://huggingface.co/QuantFactory/Qwen2-1.5B-GGUF/resolve/main/Qwen2-1.5B.Q5_K_M.gguf Qwen2-1.5B.Q5_K_M.gguf
